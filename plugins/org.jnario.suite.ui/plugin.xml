            icon="icons/suite_file.png"
            id="org.jnario.suite.ui.wizards.NewSuiteWizard"
            name="%NewSuite.label">
            <class class="org.jnario.suite.ui.SuiteExecutableExtensionFactory">
				<parameter name="javatype" value="true" />
